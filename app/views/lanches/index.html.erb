<%- model_class = Lanche -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Data</th>
      <th><%= model_class.human_attribute_name(:pessoa) %></th>
      <th>Descrição</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @lanches.each do |lanche| %>
      <tr>
        <td><%=l lanche.created_at %></td>
        <td><%= lanche.pessoa %></td>
        <td><%= lanche.descricao %></td>
        <td>
          <%= link_to "Excluir",
                      lanche_path(lanche),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) },
                      :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>